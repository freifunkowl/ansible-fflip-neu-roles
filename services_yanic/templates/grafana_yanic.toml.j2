[respondd]
enable           = true
collect_interval = "5m"
synchronize      = "5m"


[[respondd.interfaces]]
ifname = "eth0"
port = 10001
#ip_address = "fe80::804b:e0ff:fef3:8ec"
# default
multicast_address = "ff02::2:1001"
# or
#multicast_address = "ff05::2:1001"
send_no_request = true


[respondd.sites.ffsu]
domains = ["tdf","tdf-flu","tdf-inn","tdf-tdf"]


[webserver]
enable  = false
bind    = "93.241.53.98:8080"
webroot = "/opt/data"

[nodes]
state_path     = "/var/lib/yanic/yanic.json"
prune_after    = "7d"
save_interval  = "5s"
offline_after  = "10m"

[[nodes.output.nodelist]]
enable = true
path = "/opt/data/tdf/nodelist.json"
[nodes.output.nodelist.filter]
no_owner = true

[[nodes.output.meshviewer-ffrgb]]
enable  = true
path    = "/opt/data/tdf/meshviewer.json"

[nodes.output.meshviewer-ffrgb.filter]
no_owner = true
blacklist = []
sites = ["tdf","inn","flu","tdf-inn","tdf-tdf","tdf-flu"]
#has_location = true

#[nodes.output.meshviewer-ffrgb.filter.in_area]
#latitude_min = 34.30
#latitude_max = 71.85
#longitude_min = -24.96
#longitude_max = 39.72

[[nodes.output.meshviewer]]
enable         = true
version        = 2
nodes_path     = "/opt/data/tdf/nodes.json"
graph_path     = "/opt/data/tdf/graph.json"

[nodes.output.meshviewer.filter]
no_owner = true



[database]
delete_after = "7d"
delete_interval = "1h"

[[database.connection.influxdb]]
enable   = true
address  = "http://93.241.53.98:8086"
database = "ffsu"
username = ""
password = ""

[database.connection.influxdb.tags]

[[database.connection.graphite]]
enable   = false
address  = "localhost:2003"
prefix   = "freifunk"

[[database.connection.respondd]]
enable   = false
type     = "udp6"
address  = "[ipv6]:10001"

[[database.connection.logging]]
enable   = false
path = "/var/log/yanic.log"
